<div class="block">
  <%= form_with(model: todo, class:"text-lg inline-block my-3 w-72") do |form| %>
    <%= form.check_box :is_completed,
                       data: {
                        id: todo.id,
                        action: "todos#toggle"
                       },
                       class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
    <%= todo.description %>
  <% end %>
</div>
